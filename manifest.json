{
  "manifest_version": 2,
  "name": "VOEBBot",
  "version": "1.0",
  "description": "Bot for VOEBB",

  "icons": {
    "48": "icons/voebbot48.png",
    "96": "icons/voebbot96.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "https://www.munzinger.de/*",
    "https://www.voebb.de/*",
    "https://bib-voebb.genios.de/*"
  ],
  "background": {
    "scripts": [
      "lib/browser-polyfill.js",
      "background/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.spiegel.de/*",
        "https://magazin.spiegel.de/*",
        "https://www.zeit.de/*"
      ],
      "exclude_matches": [],
      "js": [
        "lib/browser-polyfill.js",
        "content/content.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "options_ui": {
      "page": "options/options.html"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/voebbot19.png",
      "38": "icons/voebbot38.png"
    },
    "default_popup": "popup/popup.html",
    "default_title": "Popup Title"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "voebbot@stefanwehrmeyer.com",
      "strict_min_version": "42.0"
    }
  }
}